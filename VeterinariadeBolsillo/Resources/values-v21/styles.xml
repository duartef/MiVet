<?xml version="1.0" encoding="UTF-8" ?>
<resources>
  <!-- Inherit from the light Material Theme -->
  <style name="MyCustomTheme" parent="android:Theme.Material.Light">
    <item name="android:windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="android:windowActionBar">false</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <!-- Override the app bar color -->
    <item name="android:colorPrimary">#3E50B4</item>
    <!-- Override the color of UI controls -->
    <!--<item name="android:colorAccent">#7B1FA2</item> -->
    <item name="android:colorAccent">#039BE5</item>
    <item name="android:colorPrimaryDark">#0277BD</item>
    <item name="android:statusBarColor">#FF3F80</item>
  </style>
</resources>